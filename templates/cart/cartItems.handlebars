<details open>
    <summary>{{items.length}} items for Purchase</summary>
    {{#items}}
        <div class="clearfix">
            <div class="imgc"><img src="{{attributes.alternateImageData.0.imageSrc}}" alt=""></div>
            <div class="info">
                <div class="title">
                    {{attributes.genericContent.itemName}}
                </div>
                <button class="btn save" data-itemId="{{attributes.genericContent.itemId}}"><span>Save for Later</span></button>
                <button class="btn remove" data-itemId="{{attributes.genericContent.itemId}}"><span>Remove</span></button>
            </div>
            <div class="qty">
                <legend>Quantity</legend>
                <input type="text" size="1" maxlength="4" value="{{attributes.qty}}" name="qty"/>
            </div>
            <div class="prc">
                <div class="list">List Price: ${{attributes.sellers.0.baseSuggPrice}}</div>
                <div class="orig">${{attributes.sellers.0.currentItemPrice}}</div>
            </div>
        </div>
    {{/items}}
</details>